<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="144dp">

                <TextView
                    android:id="@+id/text_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/biryani"
                    android:text="Hi User, \nhow are you doing today?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/reserve_button"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="40dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/reserve_button"
                        android:text="Reserve"
                        android:onClick="createReversePage"
                        />
                    <!-- kasih action on click disini-->

                    <Button
                        android:id="@+id/call_button"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginRight="40dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/call_button"
                        android:text="Call" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/reserveButton"
                        android:layout_width="216dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reserve_button"
                        tools:layout_editor_absoluteX="49dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/call_button" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:text="Review 1" />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="50dp"
                            android:layout_weight="1"
                            android:text="Review 2" />
                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/eventButton1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:text="Event 1" />

                <Button
                    android:id="@+id/eventButton2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="40dp"
                    android:text="Event 2" />

                <Button
                    android:id="@+id/eventButton3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="40dp"
                    android:text="Event 3" />

            </LinearLayout>
        </ScrollView>


    <!--    <ImageButton-->
<!--        android:id="@+id/callButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/call_button"-->

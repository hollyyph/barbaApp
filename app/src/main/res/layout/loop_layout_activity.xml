<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loop_layout_activity"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/loop_activity_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toTopOf="@+id/loop_activity_container" />
        <LinearLayout
            android:id="@+id/loop_activity_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/loop_activity_containerisi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/loop_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biryani"
                    android:layout_alignParentLeft="true"
                    android:text="title"
                    android:textColor="@color/raisin_black"
                    />

                <TextView
                    android:id="@+id/loop_activity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biryani"
                    android:text="date"
                    android:layout_alignParentLeft="true"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/loop_activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:layout_gravity="center"
                android:fontFamily="@font/biryani"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

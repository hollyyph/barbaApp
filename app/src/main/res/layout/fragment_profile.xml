<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Profile_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/biryani"
                android:text="Luqman Wijayakusuma"
                android:textSize="25dp"
                android:textColor="@color/raisin_black"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/Profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/blankprofile"/>

<!--            persection-->
            <View
                android:id="@+id/Profile_1_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_1_container" />
            <LinearLayout
                android:id="@+id/Profile_1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Profile_1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/raisin_black"
                    android:fontFamily="@font/biryani"
                    />

                <RelativeLayout
                    android:id="@+id/Profile_1_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_1_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:layout_alignParentLeft="true"
                        android:text="luqman@gmail.com"/>

                    <ImageButton
                        android:id="@+id/Profile_1_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"

                        android:background="@drawable/editbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>


            </LinearLayout>
            <View
                android:id="@+id/Profile_2_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_2_container" />

            <LinearLayout
                android:id="@+id/Profile_2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Profile_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/raisin_black"
                    android:fontFamily="@font/biryani"
                    />

                <RelativeLayout
                    android:id="@+id/Profile_2_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_2_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:layout_alignParentLeft="true"
                        android:text="+6287883434888"/>

                    <ImageButton
                        android:id="@+id/Profile_2_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"

                        android:background="@drawable/editbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_3_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_3_container" />

            <LinearLayout
                android:id="@+id/Profile_3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Profile_3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/raisin_black"
                    android:fontFamily="@font/biryani"
                    />

                <RelativeLayout
                    android:id="@+id/Profile_3_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_3_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:layout_alignParentLeft="true"
                        android:text="Male"/>

                    <ImageButton
                        android:id="@+id/Profile_3_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"

                        android:background="@drawable/editbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_4_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_4_container" />

            <LinearLayout
                android:id="@+id/Profile_4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Profile_4_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textColor="@color/raisin_black"
                    android:fontFamily="@font/biryani"
                    />

                <RelativeLayout
                    android:id="@+id/Profile_4_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_4_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:layout_alignParentLeft="true"
                        android:text="Set your birth date"/>

                    <ImageButton
                        android:id="@+id/Profile_4_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"

                        android:background="@drawable/editbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_5_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_5_container" />

            <LinearLayout
                android:id="@+id/Profile_5_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/Profile_5_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_5_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:textColor="@color/raisin_black"
                        android:layout_alignParentLeft="true"
                        android:text="Saved Address"/>

                    <ImageButton
                        android:id="@+id/Profile_5_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/detailbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_6_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_6_container" />

            <LinearLayout
                android:id="@+id/Profile_6_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/Profile_6_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_6_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:textColor="@color/raisin_black"
                        android:layout_alignParentLeft="true"
                        android:text="Rate this App"/>

                    <ImageButton
                        android:id="@+id/Profile_6_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/detailbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_7_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_7_container" />

            <LinearLayout
                android:id="@+id/Profile_7_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/Profile_7_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_7_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:textColor="@color/raisin_black"
                        android:layout_alignParentLeft="true"
                        android:text="Term of Service"/>

                    <ImageButton
                        android:id="@+id/Profile_7_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/detailbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_8_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_8_container" />

            <LinearLayout
                android:id="@+id/Profile_8_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/Profile_8_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_8_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:textColor="@color/raisin_black"
                        android:layout_alignParentLeft="true"
                        android:text="FAQ"/>

                    <ImageButton
                        android:id="@+id/Profile_8_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/detailbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/Profile_9_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/Profile_9_container" />

            <LinearLayout
                android:id="@+id/Profile_9_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/Profile_9_containerisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Profile_9_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biryani"
                        android:textColor="@color/raisin_black"
                        android:layout_alignParentLeft="true"
                        android:text="Logout"/>

                    <ImageButton
                        android:id="@+id/Profile_9_btn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/detailbtn"
                        android:theme="@style/EditButton"/>
                </RelativeLayout>
                <View
                    android:id="@+id/Profile_divider9"
android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/light_grey"
                    app:layout_constraintBottom_toTopOf="@+id/Profile_9_containerisi" />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
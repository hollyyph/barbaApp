<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewConfirmed">

    <ScrollView
        android:id="@+id/ViewConfirmed_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="192dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/ViewConfirmed_paymentMethod"
            app:layout_constraintStart_toEndOf="@+id/ViewConfirmed_paymentMethod">

            <Button
                android:id="@+id/ViewConfirmed_confirmOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirm Order"
                android:textSize="10sp"
                app:backgroundTint="@color/claret"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_paymentMethod"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_conversion_absoluteWidth="121dp" />

            <EditText
                android:id="@+id/ViewConfirmed_notes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Insert notes.."
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_noteTitle"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_noteTitle"
                tools:layout_conversion_absoluteHeight="53dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <TextView
                android:id="@+id/ViewConfirmed_salonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/biryani"
                android:text="JohnnyAndrean Bintaro"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="42dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <TextView
                android:id="@+id/ViewConfirmed_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/biryani"
                android:text="Sunday, 30 Mei 2021 13.45"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_salonName"
                tools:layout_conversion_absoluteHeight="38dp"
                tools:layout_conversion_absoluteWidth="184dp" />

            <TextView
                android:id="@+id/ViewConfirmed_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Status"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_dateTime"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="40dp" />

            <TextView
                android:id="@+id/ViewConfirmed_statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Waiting"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_status"
                tools:layout_conversion_absoluteHeight="38dp"
                tools:layout_conversion_absoluteWidth="112dp" />

            <TextView
                android:id="@+id/ViewConfirmed_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Order Number"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_statusValue"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="89dp" />

            <TextView
                android:id="@+id/ViewConfirmed_orderNumberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="123456789123"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_orderNumber"
                tools:layout_conversion_absoluteHeight="52dp"
                tools:layout_conversion_absoluteWidth="167dp" />

            <TextView
                android:id="@+id/ViewConfirmed_noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/biryani"
                android:text="Notes"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_orderNumberValue"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="75dp" />

            <TextView
                android:id="@+id/ViewConfirmed_products"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/ViewConfirmed_prices"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_notes"
                tools:layout_conversion_absoluteHeight="100dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <TextView
                android:id="@+id/ViewConfirmed_prices"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="right"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/ViewConfirmed_products"
                app:layout_constraintEnd_toEndOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ViewConfirmed_products"
                app:layout_constraintTop_toTopOf="@+id/ViewConfirmed_products"
                tools:layout_conversion_absoluteHeight="100dp"
                tools:layout_conversion_absoluteWidth="100dp" />

            <TextView
                android:id="@+id/ViewConfirmed_totalPrice"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/ViewConfirmed_totalPriceValue"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_products"
                tools:layout_conversion_absoluteHeight="44dp"
                tools:layout_conversion_absoluteWidth="183dp" />

            <TextView
                android:id="@+id/ViewConfirmed_totalPriceValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ViewConfirmed_totalPrice"
                app:layout_constraintEnd_toEndOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toTopOf="@+id/ViewConfirmed_totalPrice"
                tools:layout_conversion_absoluteHeight="41dp"
                tools:layout_conversion_absoluteWidth="168dp" />

            <TextView
                android:id="@+id/ViewConfirmed_paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:text="Payment Method"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ViewConfirmed_salonName"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_totalPrice"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="180dp" />

            <View
                android:id="@+id/ViewConfirmed_divider1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/ViewConfirmed_noteTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_orderNumberValue"
                tools:layout_conversion_absoluteHeight="1dp"
                tools:layout_conversion_absoluteWidth="411dp" />

            <View
                android:id="@+id/ViewConfirmed_divider2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/ViewConfirmed_paymentMethod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_section"
                tools:layout_conversion_absoluteHeight="1dp"
                tools:layout_conversion_absoluteWidth="411dp" />

            <View
                android:id="@+id/ViewConfirmed_section"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.1"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/ViewConfirmed_paymentMethod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewConfirmed_notes"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
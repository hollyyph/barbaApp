<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderStub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/salonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Salon Name"
            android:inputType="textPersonName"
            android:text="JohnyAndrean" />

        <EditText
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:hint="tanggal"
            android:inputType="textPersonName"
            android:text="22 Maret 2020 11:38" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="product name"
            android:inputType="textPersonName"
            android:text="produk 1"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/decreaseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_marginTop="16dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/inc_button_shape"
                android:fontFamily="@font/biryani"
                android:includeFontPadding="false"
                android:onClick="decreaseProductCount"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="7dp" />

            <TextView
                android:id="@+id/productCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal"
                android:text="1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/increaseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/inc_button_shape"
                android:fontFamily="@font/biryani"
                android:includeFontPadding="false"
                android:onClick="increaseProductCount"
                android:padding="0dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="7dp" />

        </LinearLayout>

        <Button
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:onClick="addProduct"
            android:layout_gravity="center_horizontal"
            android:text="Add" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createOrder"
            android:layout_gravity="center_horizontal"
            android:text="Create Order"
            android:layout_marginTop="250dp"

            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
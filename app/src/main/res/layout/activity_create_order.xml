                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_packageName2"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_packagePrice2" />

            <TextView
                android:id="@+id/CreateOrder_packagePrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/biryani"
                android:text="Rp80.000"
                android:textColor="@color/claret"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_packageName2"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_packageName2" />

            <TextView
                android:id="@+id/CreateOrder_packagePrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/biryani"
                android:text="Rp100.000"
                android:textColor="@color/claret"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_packageName3"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_packageName3" />

            <TextView
                android:id="@+id/CreateOrder_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/biryani"
                android:text="Total Price"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_packagePrice3"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_packagePrice3" />

            <TextView
                android:id="@+id/CreateOrder_totalPriceVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/biryani"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintBaseline_toBaselineOf="@+id/CreateOrder_totalPrice"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/CreateOrder_reviewContent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/biryani"
                android:text="Tempatnya nyaman banget dan wajib ke sini tiap bulan"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_userName"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_userName" />

            <TextView
                android:id="@+id/CreateOrder_viewAll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/biryani"
                android:text="view all"
                android:textColor="@color/claret"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="@+id/CreateOrder_reviewContent"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_reviewContent" />

            <TextView
                android:id="@+id/CreateOrder_dateTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:text="Date and Time"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintBaseline_toBaselineOf="@+id/CreateOrder_dateTimeButton"
                app:layout_constraintStart_toStartOf="@+id/CreateOrder_reviewTitle" />

            <TextView
                android:id="@+id/CreateOrder_productCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/CreateOrder_increaseButton1"
                app:layout_constraintEnd_toStartOf="@+id/CreateOrder_increaseButton1"
                app:layout_constraintTop_toTopOf="@+id/CreateOrder_increaseButton1" />

            <TextView
                android:id="@+id/CreateOrder_productCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/CreateOrder_increaseButton2"
                app:layout_constraintEnd_toStartOf="@+id/CreateOrder_increaseButton2"
                app:layout_constraintTop_toTopOf="@+id/CreateOrder_increaseButton2" />


            <TextView
                android:id="@+id/CreateOrder_productCount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/CreateOrder_increaseButton3"
                app:layout_constraintEnd_toStartOf="@+id/CreateOrder_increaseButton3"
                app:layout_constraintTop_toTopOf="@+id/CreateOrder_increaseButton3" />

            <View
                android:id="@+id/CreateOrder_divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="104dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_viewAllCat" />

            <View
                android:id="@+id/CreateOrder_divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CreateOrder_totalPrice" />

            <View
                android:id="@+id/CreateOrder_divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"

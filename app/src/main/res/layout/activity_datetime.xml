<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CalendarView
        android:id="@+id/datetime_calendar"
        android:layout_width="match_parent"
        android:layout_height="310dp" />

    <TimePicker
        android:id="@+id/datetime_time"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/datetime_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/biryani"/>


    <Button
        android:id="@+id/datetime_setbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Set"
        android:onClick="setDateTime"
        android:backgroundTint="@color/claret"/>

</LinearLayout>
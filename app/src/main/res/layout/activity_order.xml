<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <ScrollView
        android:id="@+id/OrderActivity_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-91dp"
        tools:layout_editor_absoluteY="38dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/OrderActivity_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent">

            <Button
                android:id="@+id/OrderActivity_homeButton"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="48dp"
                android:text="Back"
                android:textSize="10sp"
                app:backgroundTint="@color/light_steel_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_paymentMethodValue"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_conversion_absoluteWidth="121dp" />

            <TextView
                android:id="@+id/OrderActivity_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/OrderActivity_salonName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_noteTitle"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_noteTitle" />

            <TextView
                android:id="@+id/OrderActivity_salonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/biryani"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="42dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <TextView
                android:id="@+id/OrderActivity_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/biryani"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_salonName"
                tools:layout_conversion_absoluteHeight="38dp"
                tools:layout_conversion_absoluteWidth="184dp" />

            <TextView
                android:id="@+id/OrderActivity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Status"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_dateTime"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="40dp" />

            <TextView
                android:id="@+id/OrderActivity_statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Finished"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_status"
                tools:layout_conversion_absoluteHeight="38dp"
                tools:layout_conversion_absoluteWidth="112dp" />

            <TextView
                android:id="@+id/OrderActivity_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Order Number"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_statusValue"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="89dp" />

            <TextView
                android:id="@+id/OrderActivity_orderNumberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="123456789123"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_orderNumber"
                tools:layout_conversion_absoluteHeight="52dp"
                tools:layout_conversion_absoluteWidth="167dp" />

            <TextView
                android:id="@+id/OrderActivity_noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/biryani"
                android:text="Notes"
                android:textColor="@color/black"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_orderNumberValue"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="75dp" />

            <TextView
                android:id="@+id/OrderActivity_products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/OrderActivity_prices"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_notes"
                tools:layout_conversion_absoluteHeight="100dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <TextView
                android:id="@+id/OrderActivity_prices"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/OrderActivity_products"
                app:layout_constraintEnd_toEndOf="@+id/OrderActivity_salonName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/OrderActivity_products"
                app:layout_constraintTop_toTopOf="@+id/OrderActivity_products"
                tools:layout_conversion_absoluteHeight="100dp"
                tools:layout_conversion_absoluteWidth="100dp" />

            <TextView
                android:id="@+id/OrderActivity_totalPrice"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/OrderActivity_totalPriceValue"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_products"
                tools:layout_conversion_absoluteHeight="44dp"
                tools:layout_conversion_absoluteWidth="183dp" />

            <TextView
                android:id="@+id/OrderActivity_totalPriceValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/OrderActivity_totalPrice"
                app:layout_constraintEnd_toEndOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toTopOf="@+id/OrderActivity_totalPrice"
                tools:layout_conversion_absoluteHeight="41dp"
                tools:layout_conversion_absoluteWidth="168dp" />

            <TextView
                android:id="@+id/OrderActivity_paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="Payment Method"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_salonName"
                app:layout_constraintTop_toBottomOf="@id/OrderActivity_divider2"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="180dp" />

            <TextView
                android:id="@+id/OrderActivity_paymentMethodValue"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_paymentMethod"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_paymentMethod" />

            <View
                android:id="@+id/OrderActivity_divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/OrderActivity_noteTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_orderNumberValue"
                tools:layout_conversion_absoluteHeight="1dp"
                tools:layout_conversion_absoluteWidth="411dp" />

            <View
                android:id="@+id/OrderActivity_divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:alpha="0.5"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/OrderActivity_paymentMethod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/OrderActivity_totalPrice"
                tools:layout_conversion_absoluteHeight="1dp"
                tools:layout_conversion_absoluteWidth="411dp" />

            <View
                android:id="@+id/OrderActivity_section"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.1"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@id/OrderActivity_divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_notes"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <View
                android:id="@+id/OrderActivity_totalDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/OrderActivity_totalPrice"
                app:layout_constraintEnd_toEndOf="@+id/OrderActivity_prices"
                app:layout_constraintStart_toStartOf="@+id/OrderActivity_products"
                app:layout_constraintTop_toBottomOf="@+id/OrderActivity_products" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>